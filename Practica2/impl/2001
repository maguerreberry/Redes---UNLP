/system identity set name=2001
/ip address add address=10.0.0.1/24 interface=ether1
/ip address add address=192.168.10.1/24 interface=ether2
/ip address add address=20.0.0.1/24 interface=ether3
/routing rip interface add receive=v1 send=v1 interface=all
/routing rip network add network=192.168.10.0/24
/routing rip neighbor add address=20.0.0.2
/routing rip neighbor add address=10.0.0.2